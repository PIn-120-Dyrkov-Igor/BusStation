@model BusStation.Models.DriversComposition

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить состав водителей</h1>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Состав водителей</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Driver1)
        </dt>
        <dd class = "col-sm-10">
            @string.Format("{0} {1}. {2}.", Model.Driver1.Surname, Model.Driver1.Name[0], Model.Driver1.Patronymic[0])
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Driver2)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Driver2 != null)
            {
                @string.Format("{0} {1}. {2}.", Model.Driver2.Surname, Model.Driver2.Name[0], Model.Driver2.Patronymic[0])
            }
            @*@string.Format("{0} {1}. {2}.", Model.Driver2.Surname, Model.Driver2.Name[0], Model.Driver2.Patronymic[0])*@
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
