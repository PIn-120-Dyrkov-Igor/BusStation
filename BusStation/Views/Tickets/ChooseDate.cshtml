<h2>Оформление билета: выбор даты</h2>

<form asp-action="ChooseDate" class="form-group">
    <input type="hidden" name="PassangerId" value="@ViewBag.PassangerId" />

    <div class="form-group">
        <label class="control-label">ФИО покупателя:</label>
        <label class="control-label">@ViewBag.Passanger.Surname @ViewBag.Passanger.Name @ViewBag.Passanger.Patronymic</label>
    </div>

    <div class="form-inline">
        <label class="control-label col-md-4">Выберите дату:</label>
        <div class="col-md-8">
            <input type="date" name="SessionDate" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
        </div>
    </div>

    <div class="form-group pt-3">
        <input type="submit" value="Выбрать" class="btn btn-primary" />
    </div>
</form>