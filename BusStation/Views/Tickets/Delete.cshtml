@model BusStation.Models.Ticket

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление билета</h1>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Билет</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateSale)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateSale)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Route)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Route.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Trip)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trip.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Passanger)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Passanger.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
