@model IEnumerable<BusStation.Models.Passanger>

<h1>Покупка билета</h1>
<h4>Список пассажиров(Index)</h4>

<div class="form-group">
    <a asp-controller="Passanger" asp-action="Create" asp-route-fromTakeTickets="true" class="btn btn-info">Создать нового</a>
</div>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @using (Html.BeginForm())
                {
                    <div>
                        <input type="hidden" name="PassangerId" value="@item.Id" />
                        <input type="submit" value="Выбрать" class="btn btn-primary" />
                    </div>
                }
            </td>
        </tr>
    }
</table>