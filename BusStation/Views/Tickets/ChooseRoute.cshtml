@model IEnumerable<BusStation.Models.Route>

@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Выбор рейса</h1>
<h4>(ChooseRoute)</h4>

<div class="form-group">
    <label class="control-label">ФИО покупателя</label>
    <label class="control-label">@ViewBag.Passanger</label>
</div>

<div class="form-group">
    <label class="control-label">Дата рейса:</label>
    <label class="control-label">@ViewBag.sessionDate</label>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RouteNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepertureCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TravelTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.RouteNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepertureCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TravelTime)
                </td>
                <td>
                    <form asp-action="ChooseRoute">
                        <input type="hidden" name="PassangerId" value="@ViewBag.PassangerId">
                        <input type="hidden" name="SessionDate" value="@ViewBag.SessionDate" />
                        <input type="hidden" name="RouteId" value="@item.Id">
                        <input type="submit" value="Выбрать" class="btn btn-primary">
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
