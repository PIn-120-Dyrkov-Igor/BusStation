<h2>Схема посадки</h2>

<table class="table">
    <tr>
        <th>№ ряда</th>

        @for (int i = 1; i <= 4; i++)
        {
            <th>@i</th>
        }
    </tr>
    @for (int i = 1; i <= ViewBag.SeatCount / 4; i++)
    {
        <tr>
            <th>@i</th>
            @for (int j = 1; j <=  4; j++)
            {
                int seatNumber = (i - 1) * 4 + j;
                <th>
                    <form asp-action="ChooseTicket">

                        @Html.Hidden("PassangerId", ViewBag.PassangerId as string)
                        @Html.Hidden("SessionDate", ViewBag.SessionDate as string)
                        @Html.Hidden("RouteId", ViewBag.Route as string)
                        @Html.Hidden("TripId", ViewBag.Trip as string)
                        @Html.Hidden("StopId", ViewBag.Stop as string)

                        @Html.Hidden("SeatNumber", seatNumber)

                        @if (ViewBag.Seats[@*ViewBag.SeatCount*@seatNumber - 1])
                        {
                            <input type="submit" value="@seatNumber" class="btn btn-success">
                        }
                        else
                        {
                            <input type="submit" value="@seatNumber" class="btn btn-danger" disabled>
                        }

                    </form>
                </th>
            }
        </tr>
    }
</table>